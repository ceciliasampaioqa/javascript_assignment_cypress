{
  "name": "javascriptassignmentcypress",
  "version": "1.0.0",
  "description": "Cypress automation project for testing Automation Exercise website with parallel execution across multiple browsers",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "clean:all:reports": "concurrently \"rimraf cypress/reports/mochawesome/chrome\" \"rimraf cypress/reports/mochawesome/firefox\" \"rimraf cypress/reports/mochawesome/edge\"",
    "test:chrome": "cypress run --browser chrome --env SPLIT=3,SPLIT_INDEX=1,REPORT_NAME=chrome",
    "test:firefox": "cypress run --browser firefox --env SPLIT=3,SPLIT_INDEX=2,REPORT_NAME=firefox",
    "test:edge": "cypress run --browser edge --env SPLIT=3,SPLIT_INDEX=3,REPORT_NAME=edge",
    "test:parallel": "npm run clean:all:reports && concurrently \"npm run test:chrome\" \"npm run test:firefox\" \"npm run test:edge\"",
    "ci:chrome": "cypress run --browser chrome --env REPORT_NAME=chrome",
    "ci:firefox": "cypress run --browser firefox --env REPORT_NAME=firefox",
    "ci:edge": "cypress run --browser edge --env REPORT_NAME=edge",
    "ci:parallel": "npm run clean:all:reports && concurrently \"npm run ci:chrome\" \"npm run ci:firefox\" \"npm run ci:edge\"",
    "merge:chrome": "mochawesome-merge cypress/reports/mochawesome/chrome/.jsons/*.json -o cypress/reports/mochawesome/chrome/merged.json",
    "merge:firefox": "mochawesome-merge cypress/reports/mochawesome/firefox/.jsons/*.json -o cypress/reports/mochawesome/firefox/merged.json",
    "merge:edge": "mochawesome-merge cypress/reports/mochawesome/edge/.jsons/*.json -o cypress/reports/mochawesome/edge/merged.json",
    "report:chrome": "marge cypress/reports/mochawesome/chrome/merged.json -f report-chrome -o cypress/reports/mochawesome/chrome --reportTitle \"Test Report - Chrome\"",
    "report:firefox": "marge cypress/reports/mochawesome/firefox/merged.json -f report-firefox -o cypress/reports/mochawesome/firefox --reportTitle \"Test Report - Firefox\"",
    "report:edge": "marge cypress/reports/mochawesome/edge/merged.json -f report-edge -o cypress/reports/mochawesome/edge --reportTitle \"Test Report - Edge\"",
    "generate:all:reports": "npm-run-all merge:chrome report:chrome merge:firefox report:firefox merge:edge report:edge"
  },
  "keywords": [
    "cypress",
    "automation",
    "testing",
    "e2e",
    "javascript"
  ],
  "author": "Cecilia Sampaio",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "concurrently": "^9.2.0",
    "cypress": "^14.5.0",
    "cypress-mochawesome-reporter": "^3.8.2",
    "cypress-split": "^1.24.18",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1"
  }
}
